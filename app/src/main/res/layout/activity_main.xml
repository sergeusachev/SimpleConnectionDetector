<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_transport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transport: WIFI"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_upstream"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/tv_upstream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upstream: 1232132131"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_transport"
        app:layout_constraintBottom_toTopOf="@id/tv_downstream"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_downstream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Downstream: 12321321321"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_upstream"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>